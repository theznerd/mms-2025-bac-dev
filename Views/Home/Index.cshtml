@{
    ViewData["Title"] = "Home Page";
}

<div class="bg-white shadow rounded-lg p-6">
    <h1 class="text-3xl font-bold text-blue-600 mb-4">Welcome to Tailwind Azure App</h1>
    <p class="text-gray-700 mb-4">This is a sample ASP.NET Core application styled with Tailwind CSS and ready for Azure App Service deployment.</p>
    
    <div class="mt-8">
        <h2 class="text-xl font-semibold text-gray-800 mb-2">Features</h2>
        <ul class="list-disc pl-5 space-y-2 text-gray-600">
            <li>ASP.NET Core MVC architecture</li>
            <li>Tailwind CSS for styling</li>
            <li>Ready for Azure App Service deployment</li>
            <li>Responsive design</li>
        </ul>
    </div>
    
    <div class="mt-6">
        <a href="https://learn.microsoft.com/en-us/azure/app-service/" class="inline-block bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded transition-colors">
            Learn about Azure App Service
        </a>
    </div>
</div>

<div class="grid md:grid-cols-2 gap-6 mt-8">
    <div class="bg-white shadow rounded-lg p-6">
        <h2 class="text-xl font-semibold text-gray-800 mb-3">Getting Started</h2>
        <p class="text-gray-600">Learn how to use this template and deploy to Azure.</p>
    </div>
    
    <div class="bg-white shadow rounded-lg p-6">
        <h2 class="text-xl font-semibold text-gray-800 mb-3">Documentation</h2>
        <p class="text-gray-600">Check out the documentation for more information.</p>
    </div>
</div>