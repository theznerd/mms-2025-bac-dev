@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="bg-white shadow rounded-lg p-6">
    <h1 class="text-3xl font-bold text-blue-600 mb-4">Privacy Policy</h1>
    <p class="text-gray-700 mb-6">This privacy policy describes how we collect, use and protect your personal information.</p>
    
    <div class="space-y-4 text-gray-600">
        <div>
            <h2 class="text-xl font-semibold text-gray-800 mb-2">Information We Collect</h2>
            <p>We may collect basic user information when you interact with our application.</p>
        </div>
        
        <div>
            <h2 class="text-xl font-semibold text-gray-800 mb-2">How We Use Your Information</h2>
            <p>Any information we collect is used only to improve user experience and application functionality.</p>
        </div>
        
        <div>
            <h2 class="text-xl font-semibold text-gray-800 mb-2">Data Security</h2>
            <p>We implement appropriate security measures to protect your personal information.</p>
        </div>
    </div>
    
    <div class="mt-8 text-sm text-gray-500">
        <p>Last updated: @DateTime.Now.ToString("MMMM dd, yyyy")</p>
    </div>
</div>